import urllib.request, urllib.parse, urllib.error
from bs4 import BeautifulSoup
import ssl
import re


# Ignore SSL certificate errors
ctx = ssl.create_default_context()
ctx.check_hostname = False
ctx.verify_mode = ssl.CERT_NONE

pos = int(input('Enter the position of the name: '))
count = int(input('Enter the number of times you want to follow the link: '))

#main loop
linksd = []
urld = 'http://py4e-data.dr-chuck.net/known_by_Fikret.html'

while count > 0:
    html = urllib.request.urlopen(urld, context=ctx).read()
    soup = BeautifulSoup(html, 'html.parser')
    tags = soup('a')
    for tag in tags:
        linksd.append(tag.get('href', None))
    newurl = linksd[pos-1]
    urld = newurl
    linksd = []
    count -= 1
    print(urld)
    print(linksd)
    print(count)
else:
    print(re.findall('by_([A-Za-z]+).html', urld))
